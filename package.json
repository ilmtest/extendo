{
	"name": "extendo",
	"description": "Local translation management",
	"private": true,
	"version": "1.1.0",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"lint": "biome lint .",
		"build": "bun run compile && bun run lint && wxt build",
		"build:firefox": "bun run compile && bun run lint && wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare"
	},
	"packageManager": "bun@1.3.9",
	"dependencies": {
		"@tailwindcss/vite": "^4.2.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.575.0",
		"radix-ui": "^1.4.3",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.5.0",
		"tailwindcss": "^4.2.1",
		"tslog": "^4.10.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@happy-dom/global-registrator": "^20.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.6",
		"@semantic-release/npm": "^13.1.4",
		"@types/bun": "^1.3.9",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@wxt-dev/module-react": "^1.1.5",
		"happy-dom": "^20.7.0",
		"semantic-release": "^25.0.3",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"wxt": "^0.20.18"
	}
